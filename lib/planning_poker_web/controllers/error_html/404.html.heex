<Layouts.app flash={@flash}>
  <div class="hero min-h-screen bg-gradient-to-br from-error/10 to-base-200">
    <div class="hero-content text-center max-w-2xl">
      <div>
        <div class="text-9xl font-bold text-error mb-8">404</div>
        <h1 class="text-4xl font-bold text-base-content mb-4">
          Poker Session Not Found
        </h1>
        <p class="text-lg text-base-content/70 mb-8">
          The poker session you're looking for doesn't exist or has been removed.
        </p>

        <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
          <.link navigate={~p"/"} class="btn btn-primary btn-lg">
            <.icon name="hero-home" class="w-5 h-5" /> Go Home
          </.link>
          <.link navigate={~p"/poker"} class="btn btn-success btn-lg">
            <.icon name="hero-plus-circle" class="w-5 h-5" /> Create New Session
          </.link>
        </div>

        <div class="mt-8 text-sm text-base-content/50">
          Make sure you have the correct URL from your session moderator.
        </div>
      </div>
    </div>
  </div>
</Layouts.app>
